#ifndef MEDIA_H
#define MEDIA_H

#include <string>

using namespace std;

class Media {
protected:
    string title;
    int year;
public:
    Media(const string& title, int year);
    virtual ~Media(); // Virtual destructor for cleanup
    virtual void print() const = 0; // Pure virtual function for polymorphic behavior
    string getTitle() const;
    int getYear() const;
};

#endif
